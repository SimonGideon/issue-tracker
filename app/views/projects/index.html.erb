<div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
  <h2>Projects</h2>
  <%= link_to "New Project", new_project_path, class: "btn btn-primary" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Issues Count</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.title, project %></td>
        <td><%= truncate(project.description, length: 100) %></td>
        <td><%= project.issues_count %></td>
        <td>
          <%= link_to "View", project, class: "btn btn-secondary" %>
          <%= link_to "Edit", edit_project_path(project), class: "btn btn-primary" %>
          <%= link_to "Delete", project, method: :delete, 
                      confirm: "Are you sure?", class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>